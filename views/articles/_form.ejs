<div class="form-group mb-4">
    <label for="title">Title</label>
    <input type="text" name="title" autocomplete="off" required value="<%= article.title %>" id="title" class="form-control">
</div>
<div class="form-group mb-4">
    <label for="description">Description</label>
    <textarea type="text" name="description" autocomplete="off" required id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group mb-4">
    <label for="markdown">Markdown</label>
    <textarea type="text" name="markdown" autocomplete="off" required id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>
<a href="/" class="btn btn-warning">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>